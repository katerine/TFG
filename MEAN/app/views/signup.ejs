    <script src="js/JQuery/jquery-1.10.2.min.js"></script>
    <script src="js/BootStrap/bootstrap.min.js"></script>


    <script>
      window.onload = function() {
        //window.location.href = "./html/home.html";
      };
      
      function panel_lateral(tipo_panel) {
        var panel_acceso = document.getElementById("panel_acceso");
        var panel_registro = document.getElementById("panel_registro");
        panel_acceso.style = "display: none";
        panel_registro.style = "display: none";       
        
        if(tipo_panel == "acceso") {
          panel_acceso.style = "display: ";
        } else {
          panel_registro.style = "display: ";
        }
        
      }
    </script> 
</head>
<body>
    <!-- Mostrar mensajes Flash  -->
  <% for(var i in messages) { %>
     <div class="flash"><%= messages[i] %></div>
  <% } %>

  <!-- Menu de navegación -->
