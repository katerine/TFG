        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li>
              <a href="./about.html">Acerca de nosotros</a>
            </li>
            <li>
              <a>Servicios</a>
            </li>
            <li>
              <a href="./contacto.html">Contacto</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Submenu de navegación -->
    <nav class="navbar" role="navigation" style="background-color: #dadada;">
      <div class="container">
        
        <!-- Accesos directos de la barra de navegación -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li>
              <a onclick="panel_lateral('acceso')" href="/signup">Registrarse</a>
            </li>
            <li>
              <a onclick="panel_lateral('registro')" href="/signin">Identificarse</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

   <div class="container">
     <!-- Panel lateral para el registro -->
      <div id="panel_registro" class="panel_lateral_login" style="display;">
        <div class="col-md-10 col-md-offset-1" style="margin-top: 5%">
        <form class="form-horizontal" action="/signup" method="post">
          <div class="form-group">
            <div class="col-xs-12">
              <label>Email:</label>
              <input type="text" name="email" class="form-control" id="inputEmail" placeholder="Email">
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <label>Nombre Usuario:</label>
              <input type="text" name="username" class="form-control" id="inputEmail" placeholder="Email">
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
             <label>Contraseña:</label>
              <input type="password" name="password" class="form-control" id="inputPassword" placeholder="Password">
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <input type="password" class="form-control" placeholder="Confirmar Password">
            </div>
          </div>
          <div class="form control col-xs-12 separador" style="border: 1px solid #dadada; margin-bottom: 3%;">
            
          </div>
          <div class="form-group">
            <div class="col-xs-5">
            <label>Nombre:</label>
              <input type="text" name="firstName" class="form-control" placeholder="Nombre">
            </div>
            <div class="col-xs-7">
            <label>Apellido:</label>
              <input type="text" name="lastName" class="form-control" placeholder="Apellidos">
            </div>
            </div>
          <div class="form-group">
            <div class="col-xs-4">
              <select class="form-control">
                <option>Dia</option>
              </select>
            </div>
            <div class="col-xs-4">
              <select class="form-control">
                <option>Mes</option>
              </select>
            </div>
            <div class="col-xs-4">
              <select class="form-control">
                <option>Año</option>
              </select>
            </div>
          </div>
          <div class="form-group col-xs-6">
            <div class="col-xs-6">
              <label class="radio-inline">
                <input type="radio" name="genderRadios" value="male"> Maculino
              </label>
            </div>
            <div class="col-xs-6">
              <label class="radio-inline">
                <input type="radio" name="genderRadios" value="female"> Femenino
              </label>
            </div>
          </div>
<!--        <div class="form-group">
            <div class="col-xs-12">
              <label class="checkbox-inline">
                <input type="checkbox" value="news"> Deseo recibir el boletín de noticias de EdHospi.
              </label>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <label class="checkbox-inline">
                <input type="checkbox" value="agree">  Acepto todos los <a href="#">términos y condiciones</a>.
              </label>
            </div>
          </div>!-->
          <div class="form-group">
            <div class="col-xs-6 col-xs-offset-3">
              <input type="submit" class="btn btn-default" value="Registrarse">
            </div>
          </div>
          </form>
        </div>
        <a href="/oauth/google">Registrarse usando Google</a>
      </div> 
